<h1>Create New Item</h1>
<%= form_for @item do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :image %>
  <%= f.url_field :image %>

  <%= f.label :price %>
  <%= f.text_field :price %>

    <%= f.radio_button(:kind, "Flowers") %>
    <%= f.label(:kind_Flowers, "Flowers") %>

    <%= f.radio_button(:kind, "Gift") %>
    <%= f.label(:kind_Gift, "Gift") %>

  <%= f.submit  "Save Item" %>
<% end %>
