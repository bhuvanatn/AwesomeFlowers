<h2>Create New Item</h2>
<div class="col-md-4 col-md-offset-2">
  <%= form_for @item, :html => {:class => "form-horizontal center"} do |f| %>
  <div class="form-group">
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>
<div class="form-group">
  <%= f.label :description %>
  <%= f.text_field :description %>
</div>
<div class="form-group">
  <%= f.label :image %>
  <%= f.url_field :image %>
</div>
<div class="form-group">
  <%= f.label :price %>
  <%= f.text_field :price %>
</div>
<div class="form-group">
    <%= f.radio_button(:kind, "Flowers") %>
    <%= f.label(:kind_Flowers, "Flowers") %>

    <%= f.radio_button(:kind, "Gift") %>
    <%= f.label(:kind_Gift, "Gift") %>
</div>
<div class="form-group">
  <%= f.submit  "Save Item" %>
</div>
<% end %>
</div>
