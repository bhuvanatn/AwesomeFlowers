<div class="col-md-4 col-md-offset-2">
    <%= form_for @item, :html => {:class => "form-horizontal center"} do |f| %>
    <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group">
        <%= f.label :description %>
        <%= f.text_field :description, class: 'form-control' %>
    </div>
    <div class="form-group">
        <%= f.label :image %>
        <%= f.url_field :image, class: 'form-control' %>
    </div>
    <div class="form-group">
        <%= f.label :price %>
        <%= f.text_field :price, class: 'form-control' %>
    </div>
    <div class="form-group">
        <%= f.radio_button(:kind, "Flowers") %>
        <%= f.label(:kind_Flowers, "Flowers") %>
        <%= f.radio_button(:kind, "Gift") %>
        <%= f.label(:kind_Gift, "Gift") %>
    </div>
    <div class="form-group">
        <%= f.submit  "Save Item" , class: 'btn btn-default'%>
    </div>
    <% end %>
</div>
