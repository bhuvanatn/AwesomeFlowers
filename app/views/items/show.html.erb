<h1>Show Items</h1>
<div class="col-md-4 col-md-offset-2">
    <%= image_tag @item.image, :class => 'thumb' %>
    <%= @item.name %>
    <%= @item.description %>
    <%= @item.price %>
<button type="button" class="btn btn-info addToCart" item_id="<%= @item.id %>">Add To Cart</button>


    <%= link_to "Add Gift", "javascript:;",{  :class => "addGiftLink", :'data-target' => '#addGift', :'data-toggle' => "modal"}%>

    <% if @current_user.present? && @current_user.admin? %>
        <%= @item.kind %> |
        <%= link_to 'Edit', edit_item_path(@item) %> |
        <%= link_to 'Delete', @item, :method => :delete %>
    <% end %>
<div>

        <!-- //Code for model popup for Gifts -->

        <div id="addGift" class="modal fade addGiftPanel" role="dialog">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Add Gift</h4>
                    </div>
                    <div class="modal-body">
                        <% @gifts.each do |gift| %>
                        <div class="row">
                            <div class="col-md-3">
                                <%= image_tag gift.image, :class => 'thumbAdmin' %>
                            </div>
                            <div>
                            <%= gift.name %>
                            <%= gift.price %>
                        </div>
                            <% end %>
                            <!--end for if loop -->

                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
