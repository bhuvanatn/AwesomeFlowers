<h1>Show Items</h1>
<div class="col-md-4 col-md-offset-2">
    <%= image_tag @item.image, :class => 'thumb' %><br><br>

        <span class="label label-info fontSize">
            <%= @item.name %>
            <%= @item.price %>
            <%= link_to "Add Gift", "javascript:;",{  :class => "addGiftLink", :'data-target' => '#addGift', :'data-toggle' => "modal"}%><br>
        </span><br><br>
    <button id="btnCart" type="button" class="btn btn-info addToCart" item_id="<%= @item.id %>">Add To Cart</button>

    <% if @current_user.present? && @current_user.admin? %>
        <%= @item.kind %> |
        <%= link_to 'Edit', edit_item_path(@item) %> |
        <%= link_to 'Delete', @item, :method => :delete %>
    <% end %>
</div>
 <!-- This div is for shoppingCart, this id is called in custom.js -->
    <div id="shoppingCartView"></div>



<!-- //Code for model popup for Gifts -->
<div id="addGift" class="modal fade addGiftPanel" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Add Gift</h4>
            </div>
            <div class="modal-body">
                <% @gifts.each do |gift| %>
                <div class="row">
                    <div class="col-md-3">
                        <%= image_tag gift.image, :class => 'thumbAdmin' %><br>
                        <%= gift.name %><br>
                        <%= gift.price %><br>
                        <button type="button" class="btn btn-info addToCart" item_id="<%= gift.id %>">Add To Cart</button>
                    </div>
                    <div>

                    </div>
                    <% end %>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>
