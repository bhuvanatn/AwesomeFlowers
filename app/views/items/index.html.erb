<h1>All Items</h1>
<ul>
    <li><%= link_to 'New Item', new_item_path %></li>
</ul>
<div class="container">
    <div class="row">
        <!-- <div class="col-md-4"> -->
            <div class="col-md-offset-0">
                <table class="table table-bordered table-striped">
                    <tr>
                        <td>Name</td>
                        <td>Description</td>
                        <td>Image</td>
                        <td>Price</td>
                        <td>Type</td>
                        <td>Actions</td>
                    </tr>
                    <% @item.each do |itm| %>
                    <% if (itm.kind =='Flowers') %>
                    <tr>
                        <td><%= itm.name %></td>
                        <td><%= itm.description %></td>
                        <td><%= image_tag itm.image, :class => 'thumbAdmin' %></td>
                        <td><%= itm.price %></td>
                        <td><%= itm.kind %> </td>
                        <td>
                            <%= link_to 'Show', itm %>
                            <%= link_to 'Edit', edit_item_path(itm) %>
                            <%= link_to 'Destroy', itm, method: :delete, data: { confirm: 'Are you sure?' } %>
                        </td>
                    </tr>
                    <% end %>
                    <% end %>

                </table>
            </div>
        <!-- </div> -->
        <!-- close left column -->
        <div class="col-md-4">
            <div class="col-md-4 col-md-offset-0">
                <table class="table table-bordered table-striped">
                    <tr>
                        <td>Name</td>
                        <td>Description</td>
                        <td>Image</td>
                        <td>Price</td>
                        <td>Type</td>
                        <td>Actions</td>
                    </tr>

                    <% @item.each do |itm| %>
                    <% if (itm.kind =='Gift') %>
                    <tr>
                        <td><%= itm.name %></td>
                        <td><%= itm.description %></td>
                        <td><%= image_tag itm.image, :class => 'thumbAdmin' %></td>
                        <td><%= itm.price %></td>
                        <td><%= itm.kind %></td>
                        <td><%= link_to 'Show', itm %>
                            <%= link_to 'Edit', edit_item_path(itm) %>
                            <%= link_to 'Destroy', itm, method: :delete, data: { confirm: 'Are you sure?' } %>
                        </td>
                    </tr>
                    <% end %>
                    <% end %>
                </table>
            </div>
        </div>
        <!-- close row -->
    </div>
    <!-- close right column -->
</div>
<!-- close container -->
